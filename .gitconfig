[user]
	name = Lieuwe Rooijakkers
	email = lieuwerooijakkers@gmail.com
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[push]
	default = simple
[credential]
	helper = osxkeychain
[diff]
	algorithm = minimal
[merge]
	conflictstyle = diff3
	tool = fugitive
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[git-up "fetch"]
	all = true
[git-up "rebase"]
	arguments = --preserve-merges
[fetch]
	prune = true
[format]
	pretty = fuller
[rebase]
	stat = true
[github]
	user = lieuwex
[rerere]
	enabled = true
	autoupdate = true
[core]
	# pager = diff-highlight | diff-so-fancy | less --tabs=1,5 -R
	pager = diff-highlight | less --tabs=1,5 -R
[interactive]
	diffFilter = diff-highlight
[grep]
	patternType = perl
	fallbackToNoIndex = true
[tag]
	sort = v:refname
[alias]
	up = pull --rebase --autostash
